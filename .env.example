# MongoDB Connection
# For local MongoDB:
MONGODB_URI=mongodb://localhost:27017/family-tree

# For MongoDB Atlas (cloud):
# MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/family-tree?retryWrites=true&w=majority

# Clerk Authentication
# Get these from https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_...
CLERK_SECRET_KEY=sk_test_...

# Clerk Routes (optional - defaults to these values)
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# Authorization - Comma-separated list of authorized editor emails
# Only these email addresses will be able to create/edit/delete family members
# All other authenticated users will have read-only access
AUTHORIZED_EDITOR_EMAILS=editor1@example.com,editor2@example.com,editor3@example.com

# Client-side copy for frontend authorization checks (same as above)
NEXT_PUBLIC_AUTHORIZED_EDITOR_EMAILS=editor1@example.com,editor2@example.com,editor3@example.com

# Cloudinary Configuration
# Get these from https://cloudinary.com/console
CLOUDINARY_URL=cloudinary://your_api_key:your_api_secret@your_cloud_name
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
# Create an unsigned upload preset named "family-tree-photos" in Cloudinary dashboard
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET=family-tree-photos
